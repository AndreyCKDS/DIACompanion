<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DIACompanion" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="category_color">@color/red</item>
        <item name="category_color_dark">@color/red_dark</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/category_color</item>
        <item name="colorPrimaryVariant">?attr/category_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/category_color</item>
        <item name="colorSecondaryVariant">?attr/category_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="panel_color">@color/white</item>
        <item name="button_color">@color/white</item>
        <item name="background_image">@drawable/background</item>

        <item name="main_text_color">@color/black</item>
        <item name="secondary_text_color">@color/grey_dark</item>
        <item name="link_text_color">@color/blue</item>

        <item name="shadow_color">@color/black</item>

    </style>

    <style name="InsulinTheme" parent="Theme.DIACompanion">
        <item name="category_color">@color/blue</item>
        <item name="category_color_dark">@color/blue_dark</item>

    </style>

    <style name="MealTheme" parent="Theme.DIACompanion">
        <item name="category_color">@color/purple</item>
        <item name="category_color_dark">@color/purple_dark</item>
    </style>

    <style name="WorkoutTheme" parent="Theme.DIACompanion">
        <item name="category_color">@color/green</item>
        <item name="category_color_dark">@color/green_dark</item>
    </style>

    <style name="SleepTheme" parent="Theme.DIACompanion">
        <item name="category_color">@color/pink</item>
        <item name="category_color_dark">@color/pink_dark</item>
    </style>

    <style name="WeightTheme" parent="Theme.DIACompanion">
        <item name="category_color">@color/yellow</item>
        <item name="category_color_dark">@color/yellow_dark</item>
    </style>

    <style name="KetoneTheme" parent="Theme.DIACompanion">
        <item name="category_color">@color/orange</item>
        <item name="category_color_dark">@color/orange_dark</item>
    </style>

    <style name="SplashScreen" parent="Theme.DIACompanion">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

</resources>