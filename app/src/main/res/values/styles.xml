<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button">
        <item name="android:textSize">30sp</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">?attr/button_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ControlPanel">
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:background">?panel_color</item>
    </style>

    <style name="Content">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="MainText">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">?main_text_color</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?secondary_text_color</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="LinkText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">?link_text_color</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>