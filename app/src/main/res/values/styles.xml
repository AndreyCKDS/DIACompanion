<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Buttons-->
    <style name="Button">
        <item name="android:textSize">40sp</item>
        <item name="android:backgroundTint">?attr/category_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">?attr/button_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ControlPanel">
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:background">?panel_color</item>
    </style>

    <style name="Content">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <!--Text-->

    <style name="MainText">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?main_text_color</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="SecondaryText" parent="MainText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?secondary_text_color</item>
    </style>

    <style name="EditText" parent="SecondaryText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">4dp</item>
    </style>

     <style name="SmallText" parent="SecondaryText">
         <item name="android:textSize">20sp</item>
     </style>

    <style name="LinkText" parent="MainText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?link_text_color</item>
    </style>

</resources>