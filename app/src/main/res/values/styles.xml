<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Buttons-->
    <style name="Button">
        <item name="android:textSize">22sp</item>
        <item name="android:padding">6dp</item>
        <item name="colorAccent">?attr/category_color</item>
        <item name="backgroundTint">?attr/category_color</item>

        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">?attr/button_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>


    <style name="Content">
        <item name="android:padding">10dp</item>
    </style>

    <style name="ControlPanel" parent="Content">
        <item name="android:background">?panel_color</item>
    </style>
    <!--Text-->

    <style name="MainText">
        <item name="android:padding">6dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?main_text_color</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="Title" parent="MainText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryText" parent="MainText">
        <item name="android:textColor">?secondary_text_color</item>
    </style>

    <style name="EditText" parent="MainText">
        <item name="android:background">@drawable/edit_text</item>
    </style>

     <style name="SmallText" parent="SecondaryText">
         <item name="android:textSize">16sp</item>
     </style>

    <style name="LinkText" parent="SecondaryText">
        <item name="android:textColor">?link_text_color</item>
    </style>

    <style name="FoodRowVarText">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

