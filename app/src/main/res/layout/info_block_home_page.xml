<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_home_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="7dp"
        android:clickable="true"
        android:layout_margin="10dp"
        android:outlineSpotShadowColor="?attr/shadow_color"
        tools:targetApi="p">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/panel_color"
            android:padding="4dp">

            <TextView
                android:text="2.1 Домашняя страница"
                style="@style/MainText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:animateLayoutChanges="true"
        android:id="@+id/info_home_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tДомашнюю страницу приложения можно условно разделить на три основных блока: верхняя и нижняя навигационная панели и основная информация страницы, расположенная между ними."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tНа верхней панели располагается кнопка настроек, открывающая боковую шторку с настройками."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tНа нижней панели располагаются 3 кнопки:"
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\t-Книга рецептов. Кнопка с изображением поварского колпака открывает страницу для добавления и редактирования собственных блюд, составленных из продуктов, представленных в базе приложения."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\t-Добавить запись. Большая круглая кнопка с изображением плюса посередине открывает страницу для создания новой записи о активности пользователя."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\t-Экспорт. Кнопка с горизонтальной стрелочкой открывает страницу для экспорта собранных данных в виде таблицы Excel."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tВ основной информации представлено два блока:"
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\t-Текущий день. Сводка о белках (Б), жирах (Ж), углеводах (У) и килокалориях (К), которые пользователь употребил за текущие сутки."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\t-Последние записи. В блоке представлены карточки с 10 последними сделанными записями. При проведении пальцем влево или вправо можно перелистывать эти карточки. При нажатии на карточку открывается окно для просмотра информации о записи."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tНа карточках записей представлена краткая информация о записи, иконка, обозначающая одну из 7 категорий, а также время и дату записи."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tВ правом верхнем углу этого блока расположена кнопка История записей, которая открывает окно со всеми внесенными пользователем записями."
            android:justificationMode="inter_word"/>

    </LinearLayout>

</LinearLayout>