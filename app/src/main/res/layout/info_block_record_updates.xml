<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_record_updates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="7dp"
        android:clickable="true"
        android:layout_margin="10dp"
        android:outlineSpotShadowColor="?attr/shadow_color"
        tools:targetApi="p">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/panel_color"
            android:padding="4dp">

            <TextView
                android:text="2.6 Просмотр и редактирование записей"
                style="@style/MainText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:animateLayoutChanges="true"
        android:id="@+id/info_record_updates"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tНа странице информации о записи выводятся данные, внесенные пользователем при создании записей. Для записей приема пищи также выводится дополнительная информация, а именно диаграмма распределения БЖУ в приеме пищи, гликемический индекс, гликемическая нагрузка и рекомендация к приему пищи (для определенного типа приложения)."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tВ верхней части записи расположены две кнопки:"
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\t-Редактировать. Кнопка в виде карандаша в левом верхнем углу позволяет внести изменения в запись. Для того чтобы изменения сохранились необходимо нажать кнопку сохранить в конце изменений."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\t-Удалить. Кнопка в виде мусорного ведра в правом верхнем углу предназначена для того, чтобы удалить запись. При нажатии на нее появляется диалоговое окно, в котором необходимо выбрать, хотите ли вы удалить запись."
            android:justificationMode="inter_word"/>

    </LinearLayout>

</LinearLayout>