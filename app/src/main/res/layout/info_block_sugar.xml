<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_sugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="7dp"
        android:clickable="true"
        android:layout_margin="10dp"
        android:outlineSpotShadowColor="?attr/shadow_color"
        tools:targetApi="p">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/panel_color"
            android:padding="4dp">

            <TextView
                android:text="1.4 Измерение глюкозы"

                style="@style/MainText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:animateLayoutChanges="true"
        android:id="@+id/info_sugar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tВсем беременным женщинами с ГСД рекомендуется ежедневно до конца беременности измерять уровень глюкозы крови с помощью специального прибора, который называется глюкометр (он должен быть калиброван по плазме крови)."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tСамоконтроль гликемии проводится ежедневно от 4 до 8 раз в сутки согласно назначениям лечащего врача:"
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\t- утром натощак,\n\t- перед основными приемами пищи (для расчета дозы болюсного инсулина на прием пищи и коррекции гипергликемии),\n\t- через 1 час после начала основных приемов пищи,\n\t- при плохом самочувствии."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tВ индивидуальных случаях может потребоваться дополнительный контроль гликемии через 2 часа от начала приемов пищи (лечащий врач обязательно сообщит вам, если это необходимо)."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/MainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tЦелевые значения глюкозы (какой уровень глюкозы должен быть на фоне лечения):"
            android:justificationMode="inter_word"/>

        <GridLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:rowCount="4"
            android:columnCount="2"
            android:background="@drawable/border"
            android:alignmentMode="alignBounds"
            android:layout_margin="10dp"
            android:padding="4dp">

            <TextView
                style="@style/MainText"
                android:layout_columnWeight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Показатель"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
            <TextView
                style="@style/MainText"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Результат"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>

            <TextView
                style="@style/SmallText"
                android:layout_columnWeight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Глюкоза натощак"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
            <TextView
                style="@style/SmallText"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="меньше 5,1 ммоль/л"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>

            <TextView
                style="@style/SmallText"
                android:layout_columnWeight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Глюкоза через 1 час после основных приемов пищи (завтрака, обеда, ужина)"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
            <TextView
                style="@style/SmallText"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="меньше 7,0 ммоль/л"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>

            <TextView
                style="@style/SmallText"
                android:layout_columnWeight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Глюкоза через 2 часа после основных приемов пищи (завтрака, обеда, ужина)"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
            <TextView
                style="@style/SmallText"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="меньше 6,7 ммоль/л"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>

        </GridLayout>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tВсем беременным женщинам с ГСД рекомендуется вести дневник самоконтроля: записывать показатели уровня глюкозы капиллярной крови и время измерения, состав питания, время и тип физической активности (в том числе пешие прогулки, уборка и др), в случаях получения инсулинотерапии - названия, дозы и время введения инсулина."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/MainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tИзмерение кетонов в моче."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tЕсли в вашем рационе недостаточно разрешенных углеводов или был длительный перерыв между приемами пищи, возможно появление нежелательных кетоновых тел, которые легко определить в моче. Врач оценивает уровень кетоновых тел по результатам вашего общего анализа мочи. В случае их наличия может потребоваться коррекция рациона питания, а также дополнительный контроль кетонов в моче с помощью тест-полосок."
            android:justificationMode="inter_word"/>

    </LinearLayout>

</LinearLayout>