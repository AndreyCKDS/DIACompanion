<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_export"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="7dp"
        android:clickable="true"
        android:layout_margin="10dp"
        android:outlineSpotShadowColor="?attr/shadow_color"
        tools:targetApi="p">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/panel_color"
            android:padding="4dp">

            <TextView
                android:text="2.8 Экспорт"
                style="@style/MainText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:animateLayoutChanges="true"
        android:id="@+id/info_export"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tНа странице экспорта представлено два варианта экспорта записанных данных в Excel таблицу:"
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\t-Показать в таблице. Создает таблицу на вашем устройстве и открывает ее с помощью установленной программы на вашем устройстве."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\t-Отправить врачу. Создает таблицу и формирует электронное письмо для отправки его лечащему врачу."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tВо время процесса создания таблице на экране отображается колесо загрузки. Когда компиляция будет завершена появится зеленая галочка и приложение перейдет на домашнюю страницу."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tЗаметьте, что чтобы открыть Excel таблицу или отправить ее по почте на устройстве должны быту установлены соответственные приложения для выполнения этих действий."
            android:justificationMode="inter_word"/>

    </LinearLayout>

</LinearLayout>