<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_add_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="7dp"
        android:clickable="true"
        android:layout_margin="10dp"
        android:outlineSpotShadowColor="?attr/shadow_color"
        tools:targetApi="p">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/panel_color"
            android:padding="4dp">

            <TextView
                android:text="2.3 Добавление записи"
                style="@style/MainText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:animateLayoutChanges="true"
        android:id="@+id/info_add_record"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tПри нажатии на кнопку. Добавить новую запись на главной странице откроется страница  выбора категории записей."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tСуществует 7 доступных категорий: уровень сахара, инсулин, прием пищи, физическая активность, сон, вес и кетонурия. Некоторые категории могут быть недоступны для выбранного типа приложения."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tПри выборе категории путем нажатия на соответственную карточку открывается страница ввода данных. Вводимые данные отличаются в зависимости от категории записи."
            android:justificationMode="inter_word"/>

        <TextView
            style="@style/SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\tДля сохранения записи необходимо нажать кнопку сохранить, возвращающую пользователя на домашнюю страницу. Важно, что для сохранения записи необходимо заполнить все обязательные поля."
            android:justificationMode="inter_word"/>

    </LinearLayout>

</LinearLayout>