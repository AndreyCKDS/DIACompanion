<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DIACompanion" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="panel_color">@color/grey_darker</item>
        <item name="button_color">@color/grey_darker</item>
        <item name="background_image">@drawable/background_dark</item>


        <item name="main_text_color">@color/grey</item>
        <item name="secondary_text_color">@color/grey_dark</item>
        <item name="link_text_color">@color/blue</item>
    </style>

    <style name="SplashScreen" parent="Theme.DIACompanion">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>
</resources>